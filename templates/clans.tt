<table class="spaceout bigletter centered">

  <thead>
    <tr><th colspan=3 class="label">CLAN LADDER</th></tr>
  </thead>

  [% IF clans.size == 0 %]
  <tr><td colspan=3 class="noasc">No clans exist at this moment</td></tr>
  [% ELSE %]
  <tr class="low">
    <th>clan</th>
    <th>members</th>
    <th>points</th>
  </tr>
    [% FOREACH clan IN clans.keys.sort %]
      <tr>
        <td>[% clink(clan) %]</td>
        <td class="num">[% clans.item(clan).members.size %]</td>
        <td class="num">[% clans.item(clan).bestinshow.score %]</td>
      </tr>
    [% END %]
  [% END %]
</table>

